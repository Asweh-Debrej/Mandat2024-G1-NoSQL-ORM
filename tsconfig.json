{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "allowJs": true,
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "./dist",
  },
  "include": ["./src/**/*", "./test/**/*", "test"],
  "exclude": ["node_modules"]
}
